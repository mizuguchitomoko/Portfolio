<div class="container">
　<div class="row">
　  <h1>ブログ</h1>
　  <h3 class="blog-heding">
　    <%= @blog.blog_title %>
　  </h3>
　  <p class ="blog-date">
　    <%= @blog.created_at.strftime('%Y/%m/%d %H:%M') %>
　  </p>
　  <div class="blog-image">
　    <%= attachment_image_tag @blog, :image, :fill, 500, 350 %>
　  </div>
　  <p class="blog-text">
　    <%= simple_format(@blog.blog_text) %>
　  </p>
　  <%= link_to "編集", edit_directors_blog_path(@blog), class:"btn btn-primary" %>
　  <%= link_to "削除", directors_blog_path(@blog), method: :delete, class:"btn btn-danger" %><br>
　  <!-- コメント一覧 -->
    <div id="comment-create">
      <%= render partial: 'blog_comments/blog_comment', locals: { blog_comments: @blog_comments } %>
    </div>
　  <h3>コメント一覧</h3>
　  <% @blog.blog_comments.each do |blog_comment| %>
　  <div class="box11">
　    <p class="blog-comment">お名前：<%= blog_comment.comment_name %>
　    <p>コメント：<%= blog_comment.blog_comment %>
　    <%= link_to "コメントを削除", blog_blog_comment_path(blog_comment.blog, blog_comment), method: :delete %>
　    </p><br>
    </div>
　  <% end %>
　  <%= link_to "<< Back", directors_blogs_path %>
  </div>
</div>