<div class="container">
　<div class="row">
　  <h1>ブログ編集</h1>
    <%= form_with model:@blog, url: edit_directors_blog_path(@blog.id) , local: true do |f| %>
      <h4>タイトル</h4>
      <%= f.text_field :blog_title %>
      <h4>画像</h4>
      <%= f.attachment_field :image %>
      <h4>本文</h4>
      <%= f.text_area :blog_text, size: "40x10" %>
      <%= f.submit "編集を保存", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "<< Back", directors_blog_path(@blog) %>
　</div>
</div>