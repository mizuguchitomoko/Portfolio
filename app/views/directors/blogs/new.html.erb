<div class="container">
　<div class="row">
　　<h1>ブログ新規投稿</h1>
　　<%= form_with model:@blog, url: directors_blogs_path, local:true do |f| %>
　　  <h4>タイトル</h4>
　　  <%= f.text_field :blog_title %>
　　  <h4>画像投稿</h4>
　　  <%= f.attachment_field :image %>
　　  <h4>本文</h4>
　　  <%= f.text_area :blog_text, size: "40x10" %>
　　  <%= f.submit "Create Book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>