<div class="container">
　<div class="row">
　  <h1>ブログ</h1>
　  <h3 class="blog-heding">
　    <%= @blog.blog_title %>
　  </h3>
　  <p class ="blog-date">
　    <%= @blog.created_at %>
　  </p>
　  <div class="blog-image">
　    <%= attachment_image_tag @blog, :image, :fill, 500, 350 %>
　  </div>
　  <p class="blog-text">
　    <%= @blog.blog_text %>
　  </p>
　  <%= link_to "<< Back", blogs_path %>
  </div>
</div>