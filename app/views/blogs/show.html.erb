<div class="container">
　<div class="row">
　  <h1>Blog</h1>
　  <h3 class="blog-heding">
　    <%= @blog.blog_title %>
　  </h3>
　  <p class ="blog-date">
　    <%= @blog.created_at.strftime('%Y/%m/%d %H:%M') %>
　  </p>
　  <div class="blog-image">
　    <%= attachment_image_tag @blog, :image, :fill, 500, 350 %>
　  </div>
　  <p class="blog-text">
　    <%= safe_join(@blog.blog_text.split("\n"),tag(:br)) %>
　  </p>
    <!-- コメント一覧 -->
    <div id="comment-create">
      <%= render partial: 'blog_comments/blog_comment', locals: { blog_comment: @blog_comments } %>
    </div>

　  <%= form_with(model:[@blog, @blog_comment], remote: true) do |f| %>
　    <h4>お名前</h4>
　    <%= f.text_field :comment_name %>
　    <h4>コメント</h4>
　    <%= f.text_area :blog_comment, size:"40x10", placeholder: "コメントをここに" %>
　    <%= f.submit "コメント投稿", class: "btn btn-primary" %>
    <% end %>
　  <%= link_to "<< Back", blogs_path %><br><br>
  </div>
</div>